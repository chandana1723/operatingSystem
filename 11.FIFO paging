#include <stdio.h>

int main() {
    int n, m;
    printf("Enter number of frames: ");
    scanf("%d", &n);
    
    printf("Enter number of pages: ");
    scanf("%d", &m);
    
    int pages[m];
    printf("Enter page reference string: ");
    for(int i=0; i<m; i++)
        scanf("%d", &pages[i]);
    
    int frames[n];
    for(int i=0; i<n; i++)
        frames[i] = -1;  // Initialize frames as empty
    
    int pointer = 0, page_faults = 0;
    
    printf("\nPage Frames Status:\n");
    
    for(int i=0; i<m; i++) {
        int flag = 0;
        for(int j=0; j<n; j++) {
            if(frames[j] == pages[i]) {
                flag = 1; // Page already in frame
                break;
            }
        }
        if(flag == 0) { // Page fault
            frames[pointer] = pages[i];
            pointer = (pointer + 1) % n;
            page_faults++;
        }
        
        // Print frames after each insertion
        for(int j=0; j<n; j++) {
            if(frames[j] != -1)
                printf("%d ", frames[j]);
            else
                printf("- ");
        }
        printf("\n");
    }
    
    printf("\nTotal Page Faults: %d\n", page_faults);
    return 0;
}
